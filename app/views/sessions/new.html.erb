<h1>Login</h1>

<%= form_with(scope: :session, url: login_path,  data: { turbo: false }, local: true) do |f| %>

  <p>
    <%= f.label :email %><br/>
    <%= f.email_field :email, placeholder: "Enter your email address" %>
  </p>

  <p>
    <%= f.label :password %><br/>
    <%= f.password_field :password, placeholder: "Enter your password" %>
  </p>

  <p>
    <%= f.submit 'Log in'%>
  </p>

<% end %>